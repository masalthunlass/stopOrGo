{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist"
  },
  "lib": ["dom", "es6"],
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"]
}
