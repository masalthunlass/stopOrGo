{
  "compilerOptions": {
    "rootDir": ".",
    "strict": false,
    "allowJs": true,
    "module": "commonjs",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist"
  },
  "lib": ["dom", "es6"],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.css"
  ]
}
